<h1 class="ui center aligned header">Edit Board</h1>
<div class="ui form">
  <%= form_with(model: @board, local: true) do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, required: true %>
    </div>

    <div class="action">
      <button class="ui green button" type="submit">Save</button>
    </div>
  <% end %>
</div>