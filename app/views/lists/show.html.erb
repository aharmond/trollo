<div class="ui card">
  <div></div>
  <h1 class="ui center aligned header"><%= @list.name %></h1>
    <div class="ui divider"></div>
    <% @list.tasks.each do |task| %>
      <div class="ui feed">
        <div class="content">
          <% if task.finished == true %>
            <strike><%= task.name %></strike>
          <% elsif task.finished == false %>
            <%= task.name %>
          <% end %>
              <%= link_to edit_list_task_path(task.list_id, task) do %>
                <i class="ui grey pen square icon"></i>
              <% end %>
        </div>
      </div>
    <% end %>
  <%= link_to 'Add Task', new_list_task_path(@list), class: "ui basic green button" %>
  <%= link_to 'Edit List', edit_board_list_path(@list), class: "ui basic yellow button" %>
  <%= link_to 'Delete List', @list, method: :delete, class: "ui basic red button" %>
</div>
<div class="ui hidden divider"></div>
<%= link_to 'Back', board_path(@board), class: "ui basic grey button" %>